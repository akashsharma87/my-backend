# Docker Environment Configuration for Engineer.CV

# Application Configuration
NODE_ENV=production
PORT=3000
FRONTEND_URL=http://localhost

# Database Configuration
MONGODB_URL=mongodb://mongodb:27017/engineer-cv-production
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=secure-mongo-password-change-this

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production-docker
SESSION_SECRET=your-session-secret-change-this-in-production-docker-must-be-at-least-64-characters-long-for-security

# Cache Configuration
REDIS_URL=redis://redis:6379
ENABLE_CACHE=true

# Performance Configuration
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring Configuration
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30000

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
UPLOAD_RATE_LIMIT_MAX=10

# CORS Configuration
ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:5173

# Grafana Configuration
GRAFANA_PASSWORD=admin-password-change-this

# OpenAI Configuration (Optional - for AI features)
OPENAI_API_KEY=your-openai-api-key-here-optional

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_FILE_UPLOAD=true
ENABLE_SEARCH=true
ENABLE_NOTIFICATIONS=true

# Docker-specific Configuration
ENABLE_CLUSTERING=false
